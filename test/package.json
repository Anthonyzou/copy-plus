{
  "cppConfig": {
    "watch": [
      {
        "dirs": [
          "src",
          "test"
        ],
        "ignore": ".ts",
        "dest": "dist",
        "keepPath": true
      }
    ],
    "copy": [
      {
        "dirs": [
          "node_modules/muicss/dist/email/*.css"
        ],
        "gz": true,
        "br": true,
        "dest": "dist/src/services/templates",
        "keepPath": false
      }
    ]
  }
}